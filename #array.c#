#include <math.h>
#include <stdio.h>
#include <stdlib.h>

void decend(double *v1,double *v2 double *v3, int *n,){
  /* rearrenge elements in decending order
     double *v1 : input
     double *v2 : output
     int *n : size ***************************/
  int i,j;
  double tmp,tmpn;
  for(i=0;i<*n;i++){
    for(j=i+1;j<*n;j++){
      if(*v1[i]<*v1[j]){
	tmpn=&v1[i];
	tmp=&v1[i];
	*v2[i][0]=*v1[j][0];
	*v2[i][1]=*v1[j][1];
	*v2[j][0]=tmpn;
	*v2[j][1]=tmp;
      }
    }
  }
}
